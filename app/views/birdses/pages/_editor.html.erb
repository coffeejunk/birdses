<h2><%= @page.name %></h2>

<%= form_for :page, url: { action: create_or_update? }, method: post_or_put?,
  html: { id: 'birdses_editor_form' } do |f| %>
  <% if new? %>
    <%= f.text_field :name %>
  <% end %>
  <div id="birdses_editor">
    <%= f.gollum_editor :raw_data %>
  </div>
  <%= f.submit "Save Page", :id => 'birdses_submit_btn', :class => 'btn' %>
  <%= f.submit "Preview", :name => 'preview_button',
    :id => 'birdses_preview_btn', :class => 'btn' %>
  <div id="birdses_preview"></div>
<% end %>

<%= form_tag "#{pages_path}/doesntmatter/preview", id: 'birdses_preview_form',
                                                   remote: true -%>
