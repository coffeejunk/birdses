<h2><%= @page.name %></h2>

<%= form_for :page, url: { action: create_or_update? },
                    method: post_or_put?, html: { id: 'editor_form' } do |f| %>
  <% if new? %>
    <%= f.text_field :name %>
  <% end %>
  <%= f.text_area :raw_data %>
  <%= f.submit %>
  <div id="editor"></div>
<% end %>

<%= javascript_include_tag "birdses/application" %>
